            <div id="employee2">
                <h2>Jane Smith</h2>
                <p>Position: Product Manager</p>
                <p>Department: Product</p>
                <p>Contact: jane.smith@example.com</p>
                <!-- Add more details as needed -->
            </div>
            <!-- Add more employee profiles here -->
        </div>
    </div>
</div>